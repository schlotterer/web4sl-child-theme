{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
    "title": "Web4SL Child Theme",
	"slug": "web4sl",
	"description":  "Web4SL Styles",
	"settings": {
		"color": {
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"gradients": [
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--primary-dark) 0%, var(--wp--preset--color--primary) 100%)",
					"name": "Primary to Primary Dark",
					"slug": "primary-primaryDark"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--primary) 0%, var(--wp--preset--color--secondary) 100%)",
					"name": "Primary to Secondary",
					"slug": "primary-secondary"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--primary) 0%, var(--wp--preset--color--alternate) 100%)",
					"name": "Primary to Alternate",
					"slug": "primary-alternate"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--primary) 0%, var(--wp--preset--color--highlight) 100%)",
					"name": "Primary to Highlight",
					"slug": "primary-highlight"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--secondary-dark) 0%, var(--wp--preset--color--secondary) 100%)",
					"name": "Secondary to Secondary Dark",
					"slug": "secondary-secondaryDark"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--secondary) 0%, var(--wp--preset--color--primary) 100%)",
					"name": "Secondary to Primary",
					"slug": "secondary-primary"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--secondary) 0%, var(--wp--preset--color--alternate) 100%)",
					"name": "Secondary to Alternate",
					"slug": "secondary-alternate"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--secondary) 0%, var(--wp--preset--color--highlight) 100%)",
					"name": "Secondary to Highlight",
					"slug": "secondary-highlight"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--alternate-dark) 0%, var(--wp--preset--color--alternate) 100%)",
					"name": "Alternate to Alternate Dark",
					"slug": "alternate-alternateDark"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--alternate) 0%, var(--wp--preset--color--primary) 100%)",
					"name": "Alternate to Primary",
					"slug": "alternate-primary"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--alternate) 0%, var(--wp--preset--color--secondary) 100%)",
					"name": "Alternate to Secondary",
					"slug": "alternate-secondary"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--alternate) 0%, var(--wp--preset--color--highlight) 100%)",
					"name": "Alternate to Highlight",
					"slug": "alternate-highlight"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--neutral-light) 0%, var(--wp--preset--color--neutral) 100%)",
					"name": "Neutral to Neutral Light",
					"slug": "neutral-neutralLight"
				},
				{
					"gradient": "linear-gradient(var(--wp--custom--gradient-angle), var(--wp--preset--color--neutral-light) 0%, var(--wp--preset--color--neutral-dark) 100%)",
					"name": "Neutral Dark to Neutral Light",
					"slug": "neutralDark-neutralLight"
				},
				{
					"gradient": "linear-gradient(to bottom, var(--wp--preset--color--contrast) 0%, transparent 100%)",
					"name": "Dark to transparent - top to bottom",
					"slug": "dark-transparent-top-to-bottom"
				},
				{
					"gradient": "linear-gradient(to top, var(--wp--preset--color--contrast) 0%, transparent 100%)",
					"name": "Dark to transparent - bottom to top",
					"slug": "dark-transparent-bottom-to-top"
				},
				{
					"gradient": "linear-gradient(to right, var(--wp--preset--color--contrast) 0%, transparent 100%)",
					"name": "Dark to transparent - left to right",
					"slug": "dark-transparent-left-to-right"
				},
				{
					"gradient": "linear-gradient(to left, var(--wp--preset--color--contrast) 0%, transparent 100%)",
					"name": "Dark to transparent - right to left",
					"slug": "dark-transparent-right-to-left"
				}
			],
			"duotone": [
				{
					"colors": [ "#A00311", "#ffffff" ],
					"slug": "primary",
					"name": "Primary"
				},
				{
					"colors": [ "#398424", "#ffffff" ],
					"slug": "secondary",
					"name": "Secondary"
				},
				{
					"colors": [ "#F6A01A", "#ffffff" ],
					"slug": "alternate",
					"name": "Alternate"
				},
				{
					"colors": [ "#CC6D00", "#ffffff" ],
					"slug": "highlight",
					"name": "Highlight"
				},
				{
					"colors": [ "#7E8284", "#E0E3E3" ],
					"slug": "neutral-dark",
					"name": "Neutral"
				},
				{
					"colors": [ "#000000", "#ffffff" ],
					"slug": "dark",
					"name": "Dark"
				},
				{
					"colors": [ "#520108", "#85CC71" ],
					"slug": "primary-secondary",
					"name": "Primary Secondary"
				},
				{
					"colors": [ "#520108", "#CC6D00" ],
					"slug": "primary-highlight",
					"name": "Primary Highlight"
				},
				{
					"colors": [ "#520108", "#FBD38E" ],
					"slug": "primary-alternate",
					"name": "Primary Alt"
				}
			],
			"palette": [
				{
					"color": "#A00311",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#398424",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#F6A01A",
					"name": "Alternate",
					"slug": "alternate"
				},
				{
					"color": "#CC6D00",
					"name": "Highlight",
					"slug": "highlight"
				},
				{
					"color": "#E0E3E3",
					"name": "Neutral Light",
					"slug": "neutral-light"
				},
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#E5B8B9",
					"name": "Primary Light",
					"slug": "primary-light"
				},
				{
					"color": "#85CC71",
					"name": "Secondary Light",
					"slug": "secondary-light"
				},
				{
					"color": "#FBD38E",
					"name": "Alternate Light",
					"slug": "alternate-light"
				},
				{
					"color": "#F6931A",
					"name": "Warning",
					"slug": "warning"
				},
				{
					"color": "#BCC0C3",
					"name": "Neutral",
					"slug": "neutral"
				},
				{
					"color": "#000000",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#520108",
					"name": "Primary Dark",
					"slug": "primary-dark"
				},
				{
					"color": "#264B1BFF",
					"name": "Secondary Dark",
					"slug": "secondary-dark"
				},
				{
					"color": "#936823FF",
					"name": "Alternate Dark",
					"slug": "alternate-dark"
				},
				{
					"color": "#85CC71",
					"name": "Success",
					"slug": "success"
				},
				{
					"color": "#7E8284",
					"name": "Neutral Dark",
					"slug": "neutral-dark"
				}
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"defaultFontSizes": false,
			"fontFamilies": [
				{
					"fontFamily": "'Sulphur Point', sans-serif",
					"name": "Brand",
					"slug": "brand",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "'Sulphur Point'",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [ "file:../flexline/assets/fonts/SulphurPoint/SulphurPoint-Regular.ttf" ]
						}
					]
				},
				{
					"fontFamily": "'Raleway', sans-serif",
					"name": "Display",
					"slug": "display",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "'Raleway'",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [ "file:../flexline/assets/fonts/Raleway/Raleway-VariableFont_wght.ttf" ]
						}
					]
				},
				{
					"fontFamily": "'Source Sans 3', sans-serif",
					"name": "Body",
					"slug": "body",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "'Source Sans 3', sans-serif",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [ "file:../flexline/assets/fonts/SourceSans3/SourceSans3-VariableFont_wght.ttf" ]
						}
					]
				},
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "monospace",
					"name": "Monospace",
					"slug": "monospace"
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"name": "xSmall",
					"size": "16px",
					"slug": "x-small"
				},
				{
					"fluid": false,
					"name": "Small",
					"size": "18px",
					"slug": "small"
				},
				{
					"fluid": {
						"min": "18px",
						"max": "20px"
					},
					"name": "Medium",
					"size": "20px",
					"slug": "medium"
				},
				{
					"fluid": {
						"min": "20px",
						"max": "24px"
					},
					"name": "Large",
					"size": "24px",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "24px",
						"max": "30px"
					},
					"name": "xLarge",
					"size": "30px",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "30px",
						"max": "36px"
					},
					"name": "36px",
					"size": "36px",
					"slug": "max-36"
				},
				{
					"fluid": {
						"min": "36px",
						"max": "48px"
					},
					"name": "48px",
					"size": "48px",
					"slug": "max-48"
				},
				{
					"fluid": {
						"min": "42px",
						"max": "60px"
					},
					"name": "60px",
					"size": "60px",
					"slug": "max-60"
				},
				{
					"fluid": {
						"min": "48px",
						"max": "72px"
					},
					"name": "72px",
					"size": "72px",
					"slug": "max-72"
				}
			]
		},
		"shadow": {
			"defaultPresets": false,
			"presets": [
				{
					"name": "Light",
					"slug": "light",
					"shadow": "0 8px 12px -4px rgb(0 0 0 / 30%);"
				},
				{
					"name": "Dark",
					"slug": "dark",
					"shadow": "0 6px 7px -1px rgb(0 0 0 / 50%);"
				},
				{
					"name": "Diffused",
					"slug": "diffused",
					"shadow": "0 12px 20px -7px rgba(0,0,0,.4)"	
				}
			]
		},
		"custom": {	
			"linkColor": "var(--wp--preset--color--primary)",
			"linkHoverColor": "var(--wp--preset--color--alternate)",
			"linkTextDecoThickness": "1px",
			"navMainColor": "var(--wp--preset--color--contrast)",
			"navMainHoverColor": "var(--wp--preset--color--secondary)",
			"navMainSubColor": "var(--wp--preset--color--base)",
			"navMainSubHoverColor": "var(--wp--preset--color--alternate)",
			"navDarkOverLightColor": "var(--wp--preset--color--contrast)",
			"navDarkOverLightHoverColor": "var(--wp--preset--color--alternate-dark)",
			"navLightOverDarkColor": "var(--wp--preset--color--base)",
			"navLightOverDarkHoverColor": "var(--wp--preset--color--secondary-light)",
			"eyebrowSize": "var(--wp--preset--font-size--small)",
			"eyebrowColor": "var(--wp--preset--color--neutral)",
			"eyebrowFont": "var(--wp--preset--font-family--display)",
			"eyebrowTextTransform": "uppercase",
			"creativeSize": "var(--wp--preset--font-size--max-72)",
			"creativeColor": "var(--wp--preset--color--contrast)",
			"creativeFont": "var(--wp--preset--font-family--brand)",
			"creativeTextTransform": "none",
			"textShadow": "0 .15rem .3rem rgba(0,0,0, 0.5)",
			"borderRadius": "3px",
			"imageBorderRadius": "var(--wp--custom--border-radius)",
			"buttonBorderRadius": "3px",
			"buttonShadow": "var(--wp--preset--shadow--light)", 
			"buttonHoverShadow": "var(--wp--preset--shadow--dark)",
			"boxShadow": "var(--wp--preset--shadow--light)",
			"boxHoverShadow": "var(--wp--preset--shadow--dark)",
			"transitionTime": "0.35s ease-in-out",	
			"searchMenuIconColor": "var(--wp--preset--color--secondary)",
			"searchMenuIconHoverColor": "var(--wp--preset--color--secondary-dark)",
			"headerSearchColor": "var(--wp--preset--color--contrast)",
			"headerSearchInputBackground": "var(--wp--preset--color--base)",
			"headerSearchButtonPadding": "4px",
			"decoColor": "var(--wp--preset--color--secondary)",
			"gradientAngle": "300deg",
			"color":{
				"deco": "var(--wp--preset--color--secondary)",
				"alert": {
					"success": "var(--wp--preset--color--success)",
					"warning": "var(--wp--preset--color--warning)",
					"error": "#DF1642",
					"focus": "blue"
				}
			},
			"spacing": {
				"gap": "var(--wp--preset--spacing--large)"
			},
			"fontWeight": {
				"thin": 100,
				"extra-light": 200,
				"light": 300,
				"regular": 400,
				"medium": 500,
				"semi-bold": 600,
				"bold": 700,
				"extra-bold": 800,
				"black": 900
			},
			"lineHeight": {
				"body": 1.75,
				"heading": 1.1,
				"medium": 1.5,
				"one": 1
			}

		}
	},
	"styles": {
		"elements": {
			"button": {
				"color": {
					"gradient": "none",
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--base)"
				},
				"shadow": "var(--wp--custom--button-shadow)",
				":hover": {
					"shadow": "var(--wp--custom--button-hover-shadow)",
					"typography": {
						"textDecoration": "none"
					},
					"color": {
						"gradient": "none",
						"background": "var(--wp--preset--color--alternate)"
					}
				},
				":focus": {
					"outline": {
						"color": "var(--wp--custom--color--alert--focus)"
					}
				},
				"css": "white-space: nowrap;display:block; transition:var(--wp--preset--transition-time);"
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--brand)",
					"fontSize": "var(--wp--preset--font-size--max-48)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--brand)",
					"fontSize": "var(--wp--preset--font-size--max-36)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--display)",
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--display)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--display)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--display)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--display)",
					"fontWeight": "var(--wp--custom--font-weight--regular)",
					"lineHeight": "var(--wp--custom--line-height--heading)"
				},
				"css": "text-wrap: balance; & a:hover {color: var(--wp--custom-link-hover-color);}"
			}
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": "var(--wp--custom--button-border-radius)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--medium)",
						"right": "var(--wp--preset--spacing--large)",
						"bottom": "var(--wp--preset--spacing--medium)",
						"left": "var(--wp--preset--spacing--large)"
					}
				},
				"variations": {
					"outline" : {
						"color": {
							"background": "transparent",
							"text": "var(--wp--preset--color--primary)"
						},
						"shadow": "none",
						"border": {
							"color": "currentColor",
							"style": "solid",
							"width": "1px"
						},
						"spacing": {
							"padding": {
								"top": "calc( var(--wp--preset--spacing--medium) - 1px )",
								"right": "calc( var(--wp--preset--spacing--large) - 1px )",
								"bottom": "calc( var(--wp--preset--spacing--medium) - 1px )",
								"left": "calc( var(--wp--preset--spacing--large) - 1px )"
							}
						},
						"css": "& a:hover {color: var(--wp--preset--color--highlight) !important;}"
					}
				}
			}
		},
		"css": ""
	}
}
